        "build": "tsc",
        "test-all": "npm run check-format && npm run check-lint && npm run build",
        "prepare": "husky install"
    },
    "keywords": [],
    "author": "riz1",
    "license": "ISC",
    "devDependencies": {
        "@types/node": "^18.13.0",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
