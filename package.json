{
    "name": "todo-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.ts",
    "scripts": {
        "dev": "nodemon --watch src/* --exec ts-node ./src/index.ts",
        "start": "node ./build/src/index.ts",
        "check-format": "prettier --check .",
        "check-lint": "eslint . --ext ts --ext tsx --ext js",
